<% include ../partials/header %>
    <div class="row">
        <h1 style="text-align: center">Εισάγετε ένα νέο εύρημα</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <label for="name">Ονομασία Ευρήματος: </label>
                    <input class="form-control" type="text" name="name" id="name" placeholder="Καρυατιδες">
                </div>
                <div class="form-group">
                    <label for="image">Εικόνα Αντικειμένου:</label>
                    <input class="form-control" type="text" name="image" id="image"  title="Eισάγετε μόνο το link της εικόνας." placeholder="https://images.unsplash.com/..." required>
                </div>
                <div class="form-group">
                    <label for="cost">Εποχή Ευρήματος:</label>
                    <input class="form-control" type="text" name="cost" id="cost" placeholder="140 π.Χ">
                </div>
                <div class="form-group">
                    <label for="location">Είδος:</label>
                    <input class="form-control" type="text" name="location" id="location" placeholder="Αμφορέας">
                </div>
                <div class="form-group">
                    <label for="description">Περιγραφή</label>
                    <input class="form-control" type="text" name="description" id="description" placeholder="Eισάγετε Περιγραφή">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Εισαγωγή Αντικειμένου! </button>
                </div>
            </form>
            <a href="/campgrounds">Πίσω!</a>
        </div>
    </div>
<% include ../partials/footer %>

